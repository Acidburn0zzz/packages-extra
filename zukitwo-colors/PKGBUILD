pkgname=zukitwo-colors
pkgver=2012.05.15
pkgrel=1
pkgdesc="Zukitwo Gtk2.0/Gtk3.0/Metacity with Shiki-Colors color scheme."
url="http://gnome-look.org/content/show.php/Zukitwo-Colors?content=146290"
license=('LGPL')
arch=('any')
depends=('gtk-engine-murrine' 'gtk-engine-unico')
source=("http://www.gnome-look.org/CONTENT/content-files/146290-Zukitwo-Colors%20(2012-05-15).tar.gz")

DLAGENTS=('http::/usr/bin/wget -c -t 3 --waitretry=3 -H -U Mozilla -O %o %u')
sha256sums=('6e50acf848b61cf9302a61bf827e5b74e111b9aa662d724676f44d22392a5432')

package() {
  mkdir -p ${pkgdir}/usr/share/themes/
  cp -R ${srcdir}/Zukitwo** ${pkgdir}/usr/share/themes/
  chmod -R 755 ${pkgdir}/usr/share/themes/
}
 
 
