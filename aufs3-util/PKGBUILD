# maintainer (i686): Phil Miller <philm[at]chakra-project[dog]org>

pkgname=aufs3-util
pkgver=20120516
pkgrel=1
pkgdesc="Another Unionfs Implementation that supports NFS branches"
arch=('i686' 'x86_64')
url="http://aufs.sourceforge.net/"
license=('GPL2')
depends=('glibc')
conficts=('aufs-utils' 'aufs2-util')
source=(http://chakra-linux.org/sources/aufs3-util/aufs3-util-$pkgver.tar.gz)
md5sums=('f89a49a974361ac6324b7938e985af55')

build() {
  cd $srcdir/aufs3-util-$pkgver
  export CFLAGS="-I /usr/src/linux-`uname -r`/include"
  make
}

package() {
  cd $srcdir/aufs3-util-$pkgver
  make DESTDIR=$pkgdir install
}
