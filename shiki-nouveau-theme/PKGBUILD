# Maintainer: Philip MÃ¼ller <philm[at]manjaro[dot]org

pkgname=shiki-nouveau-theme
pkgver=20121015
pkgrel=1
pkgdesc="Shiki-Colors Gtk2.0/Gtk3.0/Metacity/Mutter/Cinnamon/Gnome-Shell theme."
url="http://karashata.deviantart.com/art/Shiki-Nouveau-318365469"
license=('LGPL')
arch=('any')
depends=('gtk-engine-murrine' 'gtk-engine-unico')
optdepends=('gnome-shell-extension-user-theme: User Theme extension for GNOME Shell'
            'gnome-tweak-tool: A tool to customize advanced GNOME 3 options.')
source=("http://www.deviantart.com/download/318365469/shiki_nouveau__2012_10_15__by_karashata-d59jod9.zip")
DLAGENTS=('http::/usr/bin/wget -c -t 3 --waitretry=3 -H -U Mozilla -O %o %u')
sha256sums=('503250a8d90a89ddcf56ac607c16d0acd53f1f4b83bad3252504b33230921abd')

package() {
 mkdir -p ${pkgdir}/usr/share/themes/
 cp -R ${srcdir}/Shiki** ${pkgdir}/usr/share/themes/
 for i in $(ls ${pkgdir}/usr/share/themes/Shiki** | grep : | cut -d: -f1)
 do
     if [ -f $i/gtk-2.0/gtkrc ] ; then
     cat >> $i/gtk-2.0/gtkrc << EOF

# fix xfce-notifyd theme
style "shiki-nouveau-notify-button"
{
    fg[NORMAL] = "#000000"
    fg[PRELIGHT] = "#000000"
}
widget_class "XfceNotifyWindow.*.GtkButton*" style "shiki-nouveau-notify-button"
EOF
 fi
 done
 chmod -R 755 ${pkgdir}/usr/share/themes/
}
