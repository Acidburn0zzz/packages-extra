# Maintainer: Philip MÃ¼ller <philm[at]manjarolinux[dot]org>

pkgname=lightdm-gtk-greeter
pkgver=1.1.6
pkgrel=1
pkgdesc="GTK+ greeter for LightDM"
arch=('i686' 'x86_64')
license=('GPL3' 'LGPL3')
url="https://launchpad.net/lightdm-gtk-greeter"
source=("https://launchpad.net/$pkgname/trunk/$pkgver/+download/$pkgname-$pkgver.tar.gz"
		lightdm-gtk-greeter.conf)
sha256sums=('d1963b6b2ce612d8ae32b0aee77d3e02994e5a9e60cc05b6bde7105cd5c54f0d'
            '5a0e90473554da4346ec0fa91ed334b9fda9b90e22f5e4448248f741b563634b')
depends=('lightdm>=1.2.0' 'gtk3')
makedepends=('gtk-doc' 'gnome-common' 'gnome-doc-utils' 'gobject-introspection' 'intltool')
optdepends=('xorg-server-xephyr: run lightdm in test mode')
conflicts=('lightdm-gtk-greeter-osk' 'lightdm-gtk-greeter-bzr')
provides=('lightdm-gtk-greeter')
backup=('etc/lightdm/lightdm-gtk-greeter.conf')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./autogen.sh --prefix=/usr \
    --sysconfdir=/etc \
    --libexecdir=/usr/lib/lightdm \
    --disable-static
    
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  
  make DESTDIR="${pkgdir}" install

  cp ../lightdm-gtk-greeter.conf $pkgdir/etc/lightdm
}
