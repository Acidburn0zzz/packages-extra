pkgname=xfdesktop
_pkgname=xfdesktop
_git=4c02f4b33de3b7e5c1b40f8778284fd1e29a7c0c
#_git=4.11.2
pkgver=4.11.2
pkgrel=3
pkgdesc="A desktop manager for Xfce"
arch=('i686' 'x86_64')
url="http://www.xfce.org/"
license=('GPL2')
groups=('xfce4')
depends=("libxfce4ui>=4.11" 'thunar' 'garcon' 'hicolor-icon-theme' 'libwnck')
makedepends=('intltool' 'xfce4-dev-tools')
provides=("$_pkgname")
conflicts=("$_pkgname" "$_pkgname-git")
options=('!libtool')
install=xfdesktop.install
source=(#http://archive.xfce.org/src/xfce/$_pkgname/4.11/$_pkgname-$pkgver.tar.bz2)
        $pkgname-$pkgver-$pkgrel.tar.bz2::http://git.xfce.org/xfce/$_pkgname/snapshot/$_pkgname-$_git.tar.bz2)
sha256sums=('36c0ed94f8b75205d398be685ec1d49006a0ed18dc9b6ce8a0f27552608c5e16')

build() {
  cd "$srcdir/$_pkgname-$_git"

  #  ./configure \
  ./autogen.sh \
    --prefix=/usr \
    --sysconfdir=/etc \
    --libexecdir=/usr/lib \
    --localstatedir=/var \
    --disable-static \
    --enable-gio-unix \
    --enable-thunarx \
    --disable-notifications \
    --disable-debug
  make
}

package() {
  cd "$srcdir/$_pkgname-$_git"
  make DESTDIR="$pkgdir" install
}
