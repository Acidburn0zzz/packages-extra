pkgname=xfdesktop
_git=4c02f4b33de3b7e5c1b40f8778284fd1e29a7c0c
#_git=4.11.2
pkgver=4.11.3
pkgrel=1
pkgdesc="A desktop manager for Xfce"
arch=('i686' 'x86_64')
url="http://www.xfce.org/"
license=('GPL2')
groups=('xfce4')
depends=("libxfce4ui>=4.11" 'thunar' 'garcon' 'hicolor-icon-theme' 'libwnck')
makedepends=('intltool')
#makedepends=('intltool' 'xfce4-dev-tools')
provides=("$_pkgname")
conflicts=("$_pkgname" "$_pkgname-git")
options=('!libtool')
install=xfdesktop.install
source=(http://archive.xfce.org/src/xfce/$pkgname/4.11/$pkgname-$pkgver.tar.bz2)
        #$pkgname-$pkgver-$pkgrel.tar.bz2::http://git.xfce.org/xfce/$pkgname/snapshot/$pkgname-$_git.tar.bz2)
sha256sums=('b7121af745bf79208380ceffa0ba377aab0c49be12ea5f8a16426b42b5e047a1')

build() {
  #cd "$srcdir/$pkgname-$_git"
  cd "$srcdir/$pkgname-$pkgver"

  #./autogen.sh \
  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --libexecdir=/usr/lib \
    --localstatedir=/var \
    --disable-static \
    --enable-gio-unix \
    --enable-thunarx \
    --disable-notifications \
    --disable-debug
  make
}

package() {
  #cd "$srcdir/$pkgname-$_git"
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
