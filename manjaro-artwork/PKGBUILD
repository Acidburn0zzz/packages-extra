pkgrel=1
pkgdesc="Artwork for Manjaro"
arch=('any')
url="http://manjaro.org"
license=('GPL')
source=('logo1.png'
	'logo2.png'
	'logo3.png'
	'logo4.png'
	'logo5.png'
	'eco-green.jpg'
	'leather-dark.jpg'
	'leaf-green.jpg'
	'manjaro01.png'
	'manjaro02.png'
	'manjaro03.png'
	'manjaro04.png'
	'manjaro05.png'
	'manjaro06.png'
	'manjaro07.png'
)
