# Maintainer: jjacky
pkgname=kalu
pkgver=2.0.1
pkgrel=1
pkgdesc="Upgrade notifier w/ AUR support, watched (AUR) packages, news"
arch=('i686' 'x86_64')
url="https://github.com/jjk-jacky/kalu"
license=('GPL3+')
depends=('dbus' 'polkit' 'gtk3' 'pacman>=4.1' 'pacman<4.2' 'curl' 'libnotify' 'notification-daemon')
makedepends=('perl' 'groff' 'manjaro-artwork')
source=(http://jjacky.com/$pkgname/$pkgname-$pkgver.tar.gz
        manjaro-kalu.patch)
sha256sums=('583ba1c7b8ea13e0209e1d69f73ac331e1791fcc28b969d0ee62d3150ae12053'
         'c8725cc095d0c2d905e7018d447d3347b60f0edfa53f1f079869f1cac1cf3dca')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  patch -p1 -i $srcdir/manjaro-kalu.patch
  cp /usr/share/icons/logo5.png $srcdir/$pkgname-$pkgver/misc/manjaro48.png
  ./configure --prefix=/usr --with-news-rss-url=http://blog.manjaro.org/feed/
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
