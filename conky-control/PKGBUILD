# Maintainer: Philip MÃ¼ller <philm@manjaro.org>

pkgname=conky-control
pkgver=1.0
pkgrel=4
pkgdesc='Simple control panel for conky'
url='http://www.manjaro.org/'
license=('GPL')
arch=('any')
options=('!emptydirs')
depends=('conky-lua' 'zenity')
install=conky-control.install

package() {
	mkdir -p ${pkgdir}/etc/skel
	cp -R ../.scripts ${pkgdir}/etc/skel
	cp -R ../.conky ${pkgdir}/etc/skel
	cp -R ../.config ${pkgdir}/etc/skel
	mkdir -p ${pkgdir}/usr/bin
	cp ../conky-control ${pkgdir}/usr/bin
	mkdir -p "${pkgdir}/usr/share/applications/"
	install -m644 "../conky-control.desktop" "${pkgdir}/usr/share/applications/"
}
