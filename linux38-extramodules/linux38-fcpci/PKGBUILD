pkgname=linux38-fcpci
_pkgname=fcpci
pkgver=31107
pkgrel=6
_extramodules=extramodules-3.8-MANJARO
_kernver="$(cat /usr/lib/modules/${_extramodules}/version)"
pkgdesc="AVM ISDN driver for FRITZ PCI isdn cards"
arch=(i686 x86_64)
license=('custom:"AVM"' 'LGPL')
url="http://www.avm.de"
depends=('isdn4k-utils' 'linux38')
makedepends=('linux38' 'linux38-headers')
provides=("$_pkgname=$pkgver")
groups=('linux38-extramodules')

