_linuxprefix=linux310
_extramodules=extramodules-3.10-MANJARO
pkgname=$_linuxprefix-catalyst-legacy
_pkgname=catalyst-legacy
pkgver=13.1
pkgrel=16
provides=("$_pkgname=$pkgver")
groups=("$_linuxprefix-extramodules")
pkgdesc="AMD/ATI Catalyst Legacy drivers for linux. fglrx kernel module only."
arch=('i686' 'x86_64')
url="http://www.amd.com"
license=('custom')
depends=("$_linuxprefix" "catalyst-legacy-utils=${pkgver}")
makedepends=("$_linuxprefix-headers")
conflicts=('catalyst' "$_linuxprefix-catalyst")
install=catalyst-legacy.install

source=(http://www2.ati.com/drivers/legacy/amd-driver-installer-catalyst-${pkgver}-legacy-linux-x86.x86_64.zip
        ati_make.sh
        makefile_compat.patch
        3.5-do_mmap.patch
        arch-fglrx-3.7.patch
        arch-fglrx-3.8.patch
        kolasa_foutrelis_fglrx_3.10.patch lano1106_fglrx_intel_iommu.patch lano1106_kcl_agp_13_4.patch)

sha256sums=('3a992fb7564dba17a696217dc32043dabc21743c82116a6657817ee8a3a1d55f'
            '8b2adf804c2691d075bb75fbb626be59f3769a2f4f1418554fc3de91a65451ab'
            'd344df75ffbe9bd899e288862f41983c2e24b5eff3e7e8cf02d4891eeb137fff'
            '3fc9bae50d25d3bfe76a3a1e89c8d025674a4cb9afd16d3a5d8b3c25a66f536d'
            '4a93aab0f829be4474a869fa43dd80e2d43348929e2236872a70040c3bbee4f5'
            'e21a2732c18fb2c059b2f20d2e5175cdd30a042e50f34f77da555bf175d25bfb'
            'f9aebe6410c15dec3323df51ab0fbd1a9bf121a18757cc45a04d66d6dcf9e5f7'  
            'd7ab220204976b5802dbfa7cbd05ec0c5a9ff3524a2020b1b8deff4f601a05fa'  
