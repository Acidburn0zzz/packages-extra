# maintainer: Roland Singer <roland[at]manjaro[dog]org>

pkgname=manjaro-settings-manager
pkgver=0.1.2
pkgrel=4
pkgdesc="Manjaro Linux System Settings Tool"
arch=('i686' 'x86_64')
url="http://git.manjaro.org"
license=('GPL')
depends=('qt4' 'locale-info' 'keyboardctl' 'pacman' 'mhwd')
makedepends=('git' 'qt4')
optdepends=('kdesu: for KDE'
            'gksu: for XFCE, Gnome, LXDE, Cinnamon'
            'gnome-keyring: for password management')
replaces=('manjaro-system-settings')
provides=('manjaro-system-settings')
conflicts=('manjaro-system-settings')
install=install
_git=no
_snapshot=efcc69dbe0787574bd0883929ae84534dff67dbe

if [ "$_git" == "Yes" ]; then
   source=(git+http://git.manjaro.org/core/manjaro-settings-manager.git)
   sha256sums=('SKIP')
else
   #source=("$pkgname-$pkgver.tar.gz::http://git.manjaro.org/core/manjaro-settings-manager/repository/archive?ref=v$pkgver")
   #sha256sums=('8626557d4c0a416d2a29c356cbaa672fdf9ab7ae2ec412c85e3ad348d19db0a0')
   source=("$pkgname-$pkgver-$pkgrel.tar.gz::http://git.manjaro.org/core/manjaro-settings-manager/repository/archive?ref=$_snapshot")
   sha256sums=('d6d4600591a330ad556e43c4e7802f7a3a7786c7b959aa7d1a17934c365475bc')
fi

build() {
  if [ -e "$srcdir/core-$pkgname" ]; then
	   cd "$srcdir/core-$pkgname/src"
  fi
  if [ -e "$srcdir/$pkgname" ]; then
     cd "$srcdir/$pkgname/src"
  fi
  if [ -e "$srcdir/$pkgname.git" ]; then
	   cd "$srcdir/$pkgname.git/src"
  fi

  /usr/lib/qt4/bin/lrelease manjaro-settings-manager/manjaro-settings-manager.pro
  /usr/lib/qt4/bin/lrelease manjaro-settings-manager-daemon/manjaro-settings-manager-daemon.pro

  qmake-qt4

  # Build fix
  make sub-global-all
  cp global/libglobal.a libglobal.a

  make all
}

package() {
  if [ -e "$srcdir/core-$pkgname" ]; then
	   cd "$srcdir/core-$pkgname/src"
  fi
  if [ -e "$srcdir/$pkgname" ]; then
     cd "$srcdir/$pkgname/src"
  fi
  if [ -e "$srcdir/$pkgname.git" ]; then
	   cd "$srcdir/$pkgname.git/src"
  fi

  make INSTALL_ROOT="${pkgdir}" install
}
